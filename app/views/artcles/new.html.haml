=render "layouts/header"
.artcle-new__wrapper
  %h2.artcle-new__wrapper--headline 記事を投稿する
  .post-artcle-box
    =form_with model:[@artcle], class:"artcle-form", local: true do |f|
      = f.text_field :title, class:"artcle-form__title", placeholder:"タイトルを入力"
      = f.text_area :text, class:"artcle-form__text", placeholder:"本文を入力", rows: 10
      = f.file_field :image, class:"artcle-form__image", placeholder:"Image Url"
      = f.submit "SEND", class:"artcle-form__send-btn"
